package com.sds.game;

import java.awt.Color;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JFrame;
import javax.swing.JMenu;
import javax.swing.JMenuBar;
import javax.swing.JMenuItem;

public class GameWin extends JFrame implements ActionListener{	
	GamePanel game_p;
	
	JMenuBar bar;
	JMenu[] menu = new JMenu[2];
	JMenuItem[] item = new JMenuItem[3]; 
	String[] itemTitle = {"시작","중지","종료"};
	
	public GameWin() {
		// TODO Auto-generated constructor stub
	
		add(game_p= new GamePanel());
		pack();
		
		//메뉴구성
		bar = new JMenuBar();
		menu[0] = new JMenu("옵션");
		menu[1] = new JMenu("도움말");
		
		for(int i=0;i<item.length;i++){
			item[i] = new JMenuItem(itemTitle[i]);
			menu[0].add(item[i]);
			
			//이벤트
			item[i].addActionListener(this);
		}
		
		bar.add(menu[0]);
		bar.add(menu[1]);
		setJMenuBar(bar);
		
		setLocationRelativeTo(null);
		setDefaultCloseOperation(EXIT_ON_CLOSE);
		setVisible(true);
		setBackground(Color.BLACK);
	
		
	}

	@Override
	public void actionPerformed(ActionEvent e) {
		// TODO Auto-generated method stub
		Object obj = e.getSource();
		
		if(obj == item[0]){
			//시작 
			game_p.gameStart();
		}else if(obj == item[1]){
			//중지
			game_p.gamePause();
		}else if(obj == item[2]){
			//종료
			game_p.gameExit();
		}
	}
	public static void main(String[] args) {
		// TODO Auto-generated method stub

		new GameWin();
	}


}
