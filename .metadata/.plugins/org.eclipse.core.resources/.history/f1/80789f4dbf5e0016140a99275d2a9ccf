package com.sds.file;


import java.awt.BorderLayout;
import java.awt.Canvas;
import java.awt.Graphics;
import java.awt.Image;
import java.awt.Toolkit;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;


class ProfileApp extends JFrame{
	JPanel p_west,p_center;
	JButton btn_open;
	JLabel lb_profile;
	Canvas can;
	Toolkit kit = Toolkit.getDefaultToolkit();
	Image[] img;
	String[] path ={
			"C:/java_workspace/GUI0810/res";
	};
	public ProfileApp(){
		super("프로필사진불러오기");
		p_west = new JPanel();
		can = new Canvas();

		p_west.add(can);
		//p_west.setBackground(Color.green);
		add(p_west, BorderLayout.WEST);
	
		p_center = new JPanel();
		lb_profile = new JLabel("경로");
		btn_open = new JButton("열기");
		
		p_center.add(btn_open);
		p_center.add(lb_profile);
		add(p_center, BorderLayout.CENTER);
		
		
		setVisible(true);
		setSize(600,400);
		setDefaultCloseOperation(EXIT_ON_CLOSE);
		
	}
	@Override
	public void paint(Graphics g) {
		// TODO Auto-generated method stub
		g.drawImage(img[path], 600, 400, this);
	}
	
	public void img(){
		
		img = new Image[path];
	}
	public static void main(String[] args){
		new ProfileApp();
	}
}